import util.

main =>
  D = read_file_lines().map(process),
  [N : {N,Xs} in D, go(N,0,Xs)].sum.println.

go(N,N,[]).
go(N,Acc,[X|Xs]) :-
  Acc <= N,
  (
    Acc2 = Acc + X;
    Acc2 = Acc * X;
    Acc2 = Acc * 10**floor(log10(X)+1) + X
  ),
  go(N,Acc2,Xs).

process(L) = {N.to_int, Ns.split.map(to_int)} => [N, Ns] = L.split(":").
